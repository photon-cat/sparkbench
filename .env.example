# Anthropic API key for Sparky agent
ANTHROPIC_API_KEY=sk-ant-...

# PlatformIO core directory (optional, defaults to ~/.platformio)
# PLATFORMIO_CORE_DIR=/path/to/.platformio

# DeepPCB autorouter API key (optional, enables "Route with DeepPCB")
DEEPPCB_API_KEY=

# --- Phase 1: PostgreSQL + Drizzle + Better-Auth + MinIO ---

# PostgreSQL
DATABASE_URL=postgresql://sparkbench:YOUR_PASSWORD_HERE@localhost:5432/sparkbench
POSTGRES_USER=sparkbench
POSTGRES_PASSWORD=  # REQUIRED: set a strong password
POSTGRES_DB=sparkbench

# MinIO (S3-compatible object storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=  # REQUIRED: set a MinIO access key
MINIO_SECRET_KEY=  # REQUIRED: set a strong MinIO secret
MINIO_BUCKET=sparkbench
MINIO_USE_SSL=false

# Better-Auth
BETTER_AUTH_SECRET=  # REQUIRED: generate with `openssl rand -base64 32`
BETTER_AUTH_URL=http://localhost:3000
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Docker Sandbox (PlatformIO builds)
SANDBOX_ENABLED=false
SANDBOX_IMAGE=sparkbench-sandbox:latest
SANDBOX_RUNTIME=

# Admin (comma-separated user IDs for /dashboard/admin access)
ADMIN_USER_IDS=

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
